@model ExpenseTrack.Models.Expense

@{
    ViewData["Title"] = "Edit Expense";
    var exceedsBalance = ViewBag.ExceedsBalance ?? false;

}

<h2>Edit Expense</h2>

<div role="dialog" aria>
    <div class="modal-dialog">
        <div class="modal-content">
            @if (exceedsBalance)
            {
                <div class="alert alert-danger" role="alert">
                    Your expense amount is exceeding your balance.
                    Please Enter valid amount.
                    
                    <a asp-action="Index" asp-controller="Expense" class="btn btn-secondary">Discard Changes</a>
                </div>
            }
            <form asp-action="EditExpense" asp-controller="Expense" method="post" onsubmit="return validateForm()">
                <div class="modal-header" style="background-color:#013E50; color:white;">
                    <h5 class="modal-title">Edit Expense</h5>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="ExpenseID" />

                    <div class="form-group">
                        <label asp-for="ExpenseName">Name</label>
                        <input asp-for="ExpenseName" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount">Amount</label>
                        <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" required />
                        <span id="amountError" style="color: red;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date">Date</label>
                        <input asp-for="Date" class="form-control" type="date" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <input asp-for="Description" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Category">Category</label>
                        <select asp-for="Category" asp-items="ViewBag.Categories" class="form-control" required>
                            <option value="">Select a Category</option>
                        </select>
                        <span id="categoryError" style="color: red;"></span>
                    </div>
                </div>

                <div class="modal-footer">
                    <a asp-action="Index" asp-controller="Expense" class="btn btn-default">Cancel</a>
                    <input type="submit" class="btn btn-success" value="Save">
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function validateForm() {
        var amount = document.getElementById("Amount").value;
        if (parseFloat(amount) < 0) {
            document.getElementById("amountError").innerText = "Amount cannot be negative.";
            return false;
        } else {
            document.getElementById("amountError").innerText = "";
        }

        var category = document.getElementById("CategoryID").value;
        if (category === "") {
            document.getElementById("categoryError").innerText = "Please select a category.";
            return false;
        } else {
            document.getElementById("categoryError").innerText = "";
        }

        return true;
    }
</script>
