@model PaginationModel<ExpenseTrack.Models.Expense>

@{
    ViewData["Title"] = "Expense";
}

<div class="container-xl ">
    <div class="table-responsive ">
        <div class="table-wrapper  ">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Expenses</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="@Url.Action("AddPage", "Expense")" class="btn text-white" style="background-color: #0A806B">
                            <i class="material-icons">&#xE147;</i> <span>Add New Expense</span>
                        </a>
                        <a href="#" class="btn text-white btn-info" data-toggle="modal" data-target="#filterModal">
                            <i class="material-icons">&#xef4f;</i> <span>Filter By Date</span>
                        </a>
                        <a href="#" class="btn text-white btn-secondary" onclick="clearFilter()">
                            <i class="material-icons">&#xeb32;</i> <span>Clear Filter</span>
                        </a>
                    </div>
                </div>
            </div>

            @if (Model.TotalItems > 0)
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Sr.</th>
                            <th>Name</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Items.Count; i++)
                        {
                            var expense = Model.Items[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@expense.ExpenseName</td>
                                <td>@expense.Amount</td>
                                <td>@expense.Date.ToShortDateString()</td>
                                <td>@expense.Description</td>
                                <td>@expense.Category</td>
                                <td>
                                    <a asp-action="EditPage" asp-controller="Expense" asp-route-ExpenseID="@expense.ExpenseID" class="edit">
                                        <i class="material-icons" style="color:#013E50;" data-toggle="tooltip" title="Edit">&#xE254;</i>
                                    </a>
                                    <a href="#" class="delete" data-toggle="modal" data-target="#deleteModal-@expense.ExpenseID">
                                        <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
                                    </a>

                                    <div id="deleteModal-@expense.ExpenseID" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form asp-action="DeleteExpense" asp-route-ExpenseID="@expense.ExpenseID" method="post">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title" id="deleteProductModalLabel">Delete Expense</h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete this expense?</p>
                                                        <p class="text-warning"><small>This action cannot be undone.</small></p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                
                </table>

             
            

                    <div class="">
                        @if (Model.TotalItems > Model.PageSize)
                        {
                            var totalPages = (int)Math.Ceiling(Model.TotalItems / (double)Model.PageSize);

                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    @if (Model.CurrentPage > 1)
                                    {

                                        @if (Model.CurrentPage > 2)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Url.Action("Index", "Expense")?filterDate=@ViewBag.FilterDate&page=1">1</a>
                                            </li>
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        }

                                    }

                                    @for (int i = Math.Max(1, Model.CurrentPage - 1); i <= Math.Min(totalPages, Model.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link @(i == Model.CurrentPage ? "" : "bg-light")" href="@Url.Action("Index", "Expense")?filterDate=@ViewBag.FilterDate&page=@i">@i</a>
                                        </li>
                                    }

                                    @if (Model.CurrentPage < totalPages - 2)
                                    {
                                        @if (Model.CurrentPage < totalPages - 2)
                                        {
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        }
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", "Expense")?filterDate=@ViewBag.FilterDate&page=@totalPages">@totalPages</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    </div>




            }
            else
            {
                <div class="text-center mt-5">
                    <h4>No expenses available.</h4>
                </div>
            }
        </div>
    </div>

    <!-- Filter Modal -->
    <div class="modal fade" id="filterModal" tabindex="-1" role="dialog" aria-labelledby="filterModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="filterForm">
                    <div class="modal-header">
                        <h4 class="modal-title" id="filterModalLabel" style="  color:#013E50;">Filter by Date</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="filterDate">Select Date:</label>
                            <input type="date" class="form-control" id="filterDate" name="filterDate" required />
                            <div class="invalid-feedback" id="filterDateError">Please select a date.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn" style=" background-color:#013E50; color:white;" onclick="applyFilter()">Apply</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function applyFilter() {
            var selectedDate = document.getElementById("filterDate").value;
            var filterDateError = document.getElementById("filterDateError");

            if (selectedDate.trim() === "") {
                filterDateError.style.display = "block";
            } else {
                filterDateError.style.display = "none";
                window.location.href = "@Url.Action("Index", "Expense")?filterDate=" + selectedDate;
            }
        }

        function clearFilter() {
            window.location.href = "@Url.Action("Index", "Expense")";
        }
    </script>
</div>
