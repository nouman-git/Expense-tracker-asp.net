@using ExpenseTrack.Models.UserProfile
@{
    var userInfo = ViewData["UserInfo"] as UserInfo;
   
    string path = Context.Request.Path;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTracker</title>
    <script src="~/lib/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpenseTrack.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Tangerine">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        /* Custom styles */
        .active {
            position: relative; /* Set the positioning context for the pseudo-element */
            color: white !important; /* Override Bootstrap text color */
            border-radius: 5px; /* Optional: Add border-radius for rounded corners */
        }

            .active::after {
                content: ''; /* Create an empty content */
                position: absolute; /* Position the dot relative to its containing element */
                bottom: 0; /* Position the dot at the bottom of the link */
                left: 50%; /* Center the dot horizontally */
                transform: translateX(-50%); /* Adjust the horizontal centering */
                width: 90%; /* Set the width of the dot */
                height: 2px; /* Set the height of the dot */
                background-color: white; /* Set the color of the dot */
                 /* Create a circular shape */
            }


    </style>

</head>
<body style="font-family: 'Poppins', sans-serif; background: rgba(0, 0, 0, 0.2); background-image: url('/images/bgr1.jpeg');">
    <header>

        


        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom mb-3" style="background-color:#012A36">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: white">
                     <img src="/images/logo1.png" alt="Logo" style="width: 40px; height: 38px;" class="d-inline-block mx-1 " /> 

               

                    Expense Tracker
                </a>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                        <!-- Center the content -->
                        <ul class="nav" >
                           
                            <li class="nav-item"  >
                                <a style=" color: white" class="nav-link  @(path.StartsWith("/Expense") ? "active" : "")" asp-area="" asp-controller="Expense" asp-action="Index">Expense</a>
                            </li>
                            <li class="nav-item  ">
                                <a style=" color: white" class="nav-link   @(path.StartsWith("/Wishlist") ? "active" : "")" asp-area="" asp-controller="Wishlist" asp-action="Index">Wish List</a>
                            </li>
                            <li class="nav-item ">
                                <a style=" color: white" class="nav-link   @(path.StartsWith("/UserProfile") ? "active" : "")" asp-area="" asp-controller="UserProfile" asp-action="Index">Profile</a>
                            </li>
                        </ul>
                    </div>
                }
                <partial name="_LoginPartial" />
            </div>

        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 ">

            @RenderBody()
        </main>
    </div>
