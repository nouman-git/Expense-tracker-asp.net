@model ExpenseTrack.Models.UserProfile.UserProfileViewModel

@{
    ViewData["Title"] = "User Profile";
}
<div class="container mt-4">
    <h2>User Profile</h2>
        <form asp-controller="UserProfile" asp-action="UpdateProfile">

    <div class="form-group mb-3">
        <label>Email</label>
        <input type="text" class="form-control" value="@Model.Email" disabled style="width: 50%;">
    </div>
    <div class="form-group mb-3">
        <label>First Name</label>
        <input type="text" class="form-control" name="FirstName" value="@Model.FirstName" style="width: 50%;">
    </div>
    <div class="form-group mb-3">
        <label>Last Name</label>
        <input type="text" class="form-control" name="LastName" value="@Model.LastName" style="width: 50%;">
    </div>


    <div class="form-group mb-3">
        <label>Income</label>
        @if (Model.Income == 0)
        {
            <input type="text" class="form-control" name="Income" placeholder="Enter Income" style="width: 50%;">
        }
        else
        {
            <input type="text" class="form-control" name="Income" value="@Model.Income" style="width: 50%;">
        }

