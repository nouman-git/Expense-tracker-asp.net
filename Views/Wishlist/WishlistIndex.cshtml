@model List<ExpenseTrack.Models.WishlistItem>

@{
    ViewData["Title"] = "Wishlist";
}

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Wishlist <b>Items</b></h2>
                    </div>
                </div>
            </div>
            @if (Model.Count > 0)
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var wishlistItem in Model)
                        {
                            <tr>
                                <td>@wishlistItem.WishlistItemId</td>
                                <td>@wishlistItem.ExpenseName</td>
                                <td>@wishlistItem.Amount</td>
                                <td>@wishlistItem.Date.ToShortDateString()</td>
                                <td>@wishlistItem.Description</td>
                                <td>@wishlistItem.Category</td>
                                <td>
                                    <a href="#" class="add" data-toggle="modal" data-target="#addToWishlistModal-@wishlistItem.WishlistItemId">
                                        <i class="material-icons" data-toggle="tooltip" title="Add">&#xE145;</i>
                                    </a>
                                    <a href="#" class="delete" data-toggle="modal" data-target="#deleteWishlistModal-@wishlistItem.WishlistItemId">
                                        <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
                                    </a>

                                    <div id="deleteWishlistModal-@wishlistItem.WishlistItemId" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="deleteWishlistModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form asp-action="DeleteWishlistItem" asp-controller="Wishlist" asp-route-wishlistItemId="@wishlistItem.WishlistItemId" method="post">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title" id="deleteWishlistModalLabel">Delete Wishlist Item</h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to remove this item from the wishlist?</p>
                                                        <p class="text-warning"><small>This action cannot be undone.</small></p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-danger">Remove</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center mt-5">
                    <h4>No items in the wishlist.</h4>
                </div>
            }
        </div>
    </div>
</div>
