@model PaginationModel<ExpenseTrack.Models.WishlistItem>

@{
    ViewData["Title"] = "Wishlist";
}

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Wishlist <b>Items</b></h2>
                    </div>
                    <div class="col-sm-6">
                        
                        <a href="@Url.Action("AddPage", "Wishlist")" class="btn text-white" style="background-color: #0A806B">
                            <i class="material-icons">&#xE147;</i> <span>Add New Wish Item</span>
                        </a>
                        <a href="#" class="btn btn-info" data-toggle="modal" data-target="#filterModal">
                            <i class="material-icons">&#xef4f;</i> <span>Filter By Date</span>
                        </a>

                        <a href="#" class="btn btn-secondary" onclick="clearFilter()">
                            <i class="material-icons">&#xeb32;</i> <span>Clear Filter</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Filter Modal -->
            <div class="modal fade" id="filterModal" tabindex="-1" role="dialog" aria-labelledby="filterModalLabel" aria-hidden="true" data-url="@Url.Action("WishlistIndex", "Wishlist")">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form id="filterForm">
                            <div class="modal-header">
                                <h4 class="modal-title" style=" color:#013E50;" id="filterModalLabel">Filter by Date</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="filterDate">Select Date:</label>
                                    <input type="date" class="form-control" id="filterDate" name="filterDate" required />
                                    <div class="invalid-feedback" id="filterDateError">Please select a date.</div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn " style=" background-color:#013E50; color:white;" onclick="applyFilter()">Apply</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            @if (Model.Items.Count > 0)
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Sr.</th>
                            <th>Name</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Items.Count; i++)
                        {
                            var wishlistItem = Model.Items[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@wishlistItem.ExpenseName</td>
                                <td>@wishlistItem.Amount</td>
                                <td>@wishlistItem.Date.ToShortDateString()</td>
                                <td>@wishlistItem.Description</td>
                                <td>@wishlistItem.Category</td>
                                <td>
                                   

                                    <a href="#" class="add"  data-toggle="modal" data-target="#addToWishlistModal-@wishlistItem.WishlistItemId">
                                        <i class="material-icons" style="color:#013E50;" data-toggle="tooltip" title="Add">&#xE145;</i>
                                    </a>
                                    
                                    <a href="#" class="delete" data-toggle="modal" data-target="#deleteModal-@wishlistItem.WishlistItemId">
                                        <i class="material-icons"  data-toggle="tooltip" title="Delete">&#xE872;</i>
                                    </a>
                                </td>
                            </tr>

                            <!-- Delete Modal for each item -->
                            <div id="deleteModal-@wishlistItem.WishlistItemId" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form asp-action="DeleteWishlistItem" asp-route-wishlistItemId="@wishlistItem.WishlistItemId" method="post">
                                            <div class="modal-header">
                                                <h4 class="modal-title" id="deleteProductModalLabel">Delete Wishlist Item</h4>
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to delete this wishlist item?</p>
                                                <p class="text-warning"><small>This action cannot be undone.</small></p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!-- Add to Expense Modal for each item -->
                            <div id="addToWishlistModal-@wishlistItem.WishlistItemId" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="addToWishlistModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <!-- Add content based on conditions -->
                                        @if (wishlistItem.Amount <= ViewBag.UserBalance)
                                        {
                                            <!-- Show the option to add to expenses -->
                                            <div class="modal-header">
                                                <h4 class="modal-title" id="addToWishlistModalLabel">Add to Expenses</h4>
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            </div>
                                            <div class="modal-body">
                                                <p>You can now add this item to expenses.</p>
                                                <p>Do you want to proceed?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn" style="background-color: #013E50; color:white;" data-dismiss="modal">Cancel</button>
                                                <a href="#" class="btn" style="background-color: #013E50; color:white;" onclick="addToExpense(@wishlistItem.WishlistItemId)">Add to Expenses</a>
                                            </div>
                                        }
                                        else
                                        {
                                            <!-- Show a message that the item can't be added to expenses -->
                                            <div class="modal-header">
                                                <h4 class="modal-title" id="addToWishlistModalLabel">Cannot Add to Expenses</h4>
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Unfortunately, the wishlist item cannot be added to expenses due to insufficient funds in the user's balance.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn" style="background-color: #013E50; color:white;" data-dismiss="modal">Close</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
             
                <div class="">
                    @if (Model.TotalItems > Model.PageSize)
                    {
                        var totalPages = (int)Math.Ceiling(Model.TotalItems / (double)Model.PageSize);

                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                @if (Model.CurrentPage > 1)
                                {

                                    @if (Model.CurrentPage > 2)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", "Wishlist")?filterDate=@ViewBag.FilterDate&page=1">1</a>
                                        </li>
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }

                                }

                                @for (int i = Math.Max(1, Model.CurrentPage - 1); i <= Math.Min(totalPages, Model.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link @(i == Model.CurrentPage ? "" : "bg-light")" href="@Url.Action("Index", "Wishlist")?filterDate=@ViewBag.FilterDate&page=@i">@i</a>
                                    </li>
                                }

                                @if (Model.CurrentPage < totalPages - 2)
                                {
                                    @if (Model.CurrentPage < totalPages - 2)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", "Wishlist")?filterDate=@ViewBag.FilterDate&page=@totalPages">@totalPages</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>

            }
            else
            {
                <div class="text-center mt-5">
                    <h4>No items in the wishlist.</h4>
                </div>
            }
        </div>
    </div>
</div>
<script>
    function addToExpense(wishlistItemId) {
        // You can perform AJAX request to add wishlist item to expenses
        $.ajax({
            url: '@Url.Action("AddToExpense", "Wishlist")',
            type: 'POST',
            data: { wishlistItemId: wishlistItemId },
            success: function (data) {
                // Reload the page or update the UI as needed
                location.reload();
            },
            error: function () {
                alert('An error occurred while processing your request.');
            }
        });
    }

        function applyFilter() {
            var selectedDate = document.getElementById("filterDate").value;
            var filterDateError = document.getElementById("filterDateError");

            if (selectedDate.trim() === "") {
                filterDateError.style.display = "block";
            } else {
                filterDateError.style.display = "none";
                window.location.href = "@Url.Action("Index", "Wishlist")?filterDate=" + selectedDate;
            }
        }

    function clearFilter() {
        window.location.href = "@Url.Action("Index", "Wishlist")";
    }
</script>


