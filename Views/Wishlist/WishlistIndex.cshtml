@model List<ExpenseTrack.Models.WishlistItem>

@{
    ViewData["Title"] = "Wishlist";
}

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Wishlist <b>Items</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="@Url.Action("AddPage", "Wishlist")" class="btn btn-success">
                            <i class="material-icons">&#xE147;</i> <span>Add New Wish Item</span>
                        </a>
                        <a href="#" class="btn btn-secondary" data-toggle="modal" data-target="#filterModal">
                            <i class="material-icons">&#xef4f;</i> <span>Filter By Date</span>
                        </a>

                        <a href="#" class="btn btn-info" onclick="clearFilter()">
                            <i class="material-icons">&#xeb32;</i> <span>Clear Filter</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Filter Modal -->
            <div class="modal fade" id="filterModal" tabindex="-1" role="dialog" aria-labelledby="filterModalLabel" aria-hidden="true" data-url="@Url.Action("WishlistIndex", "Wishlist")">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form id="filterForm">
                            <div class="modal-header">
                                <h4 class="modal-title" id="filterModalLabel">Filter by Date</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="filterDate">Select Date:</label>
                                    <input type="date" class="form-control" id="filterDate" name="filterDate" required />
                                    <div class="invalid-feedback" id="filterDateError">Please select a date.</div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary" onclick="applyFilter()">Apply</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            @if (Model.Count > 0)
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var wishlistItem in Model)
                        {
                            <tr>
                                <td>@wishlistItem.WishlistItemId</td>
                                <td>@wishlistItem.ExpenseName</td>
                                <td>@wishlistItem.Amount</td>
                                <td>@wishlistItem.Date.ToShortDateString()</td>
                                <td>@wishlistItem.Description</td>
                                <td>@wishlistItem.Category</td>
                                <td>
                                    <a href="#" class="delete" data-toggle="modal" data-target="#deleteModal-@wishlistItem.WishlistItemId">
                                        <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
                                    </a>

                                    <a href="#" class="add" data-toggle="modal" data-target="#addToWishlistModal-@wishlistItem.WishlistItemId">
                                        <i class="material-icons" data-toggle="tooltip" title="Add">&#xE145;</i>
                                    </a>
                                </td>
                            </tr>

                            <!-- Delete Modal for each item -->
                            <div id="deleteModal-@wishlistItem.WishlistItemId" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form asp-action="DeleteWishlistItem" asp-route-wishlistItemId="@wishlistItem.WishlistItemId" method="post">
                                            <div class="modal-header">
                                                <h4 class="modal-title" id="deleteProductModalLabel">Delete Wishlist Item</h4>
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to delete this wishlist item?</p>
                                                <p class="text-warning"><small>This action cannot be undone.</small></p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!-- Add to Expense Modal for each item -->
                            <div id="addToWishlistModal-@wishlistItem.WishlistItemId" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="addToWishlistModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <!-- Add content based on conditions -->
                                        @if (wishlistItem.Amount < ViewBag.UserBalance)
                                        {
                                            <!-- Show the option to add to expenses -->
                                            <div class="modal-header">
                                                <h4 class="modal-title" id="addToWishlistModalLabel">Add to Expenses</h4>
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            </div>
                                            <div class="modal-body">
                                                <p>You can now add this item to expenses.</p>
                                                <p>Do you want to proceed?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                <a href="#" class="btn btn-success" onclick="addToExpense(@wishlistItem.WishlistItemId)">Add to Expenses</a>
                                            </div>
                                        }
                                        else
                                        {
                                            <!-- Show a message that the item can't be added to expenses -->
                                            <div class="modal-header">
                                                <h4 class="modal-title" id="addToWishlistModalLabel">Cannot Add to Expenses</h4>
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Wishlist item can't be added to expenses because user balance is less than this wishlist item.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center mt-5">
                    <h4>No items in the wishlist.</h4>
                </div>
            }
        </div>
    </div>
</div>
<script>
    function addToExpense(wishlistItemId) {
        // You can perform AJAX request to add wishlist item to expenses
        $.ajax({
            url: '@Url.Action("AddToExpense", "Wishlist")',
            type: 'POST',
            data: { wishlistItemId: wishlistItemId },
            success: function (data) {
                // Reload the page or update the UI as needed
                location.reload();
            },
            error: function () {
                alert('An error occurred while processing your request.');
            }
        });
    }
</script>

 <script>
        function applyFilter() {
            var selectedDate = document.getElementById("filterDate").value;
            var filterDateError = document.getElementById("filterDateError");

            if (selectedDate.trim() === "") {
                filterDateError.style.display = "block";
            } else {
                filterDateError.style.display = "none";
                window.location.href = "@Url.Action("Index", "Wishlist")?filterDate=" + selectedDate;
            }
        }

    function clearFilter() {
        window.location.href = "@Url.Action("Index", "Wishlist")";
    }
</script>


